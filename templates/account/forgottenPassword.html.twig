{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!
{% endblock %}

{% block stylesheets %}

	{{parent()}}
	
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col s10 offset-s1">
            	
				<div class="card">
					<div class="card-title">
						<h5 class=" center">Please Enter Your Email</h5>
					</div>
					 {% for message in app.flashes('notice') %}
					   <div class="collection">
							
							<a  class="collection-item active">{{message}}</a>
							
    				  </div>
                               
                        {% endfor %}
					<div class="card-content">
						{{form_start(form)}}
						{{form_widget(form)}}
						
						<button type="submit" class="btn btn-primary" href="#" role="button"><i class="material-icons right">send</i>SEND</button>

						{{form_end(form)}}
					</div>


				</div>
			</div>
		</div>

	{% endblock %}