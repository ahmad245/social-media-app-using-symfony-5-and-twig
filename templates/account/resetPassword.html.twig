{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!
{% endblock %}

{% block stylesheets %}

	{{parent()}}
	
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col s10 offset-s1">
            	{% if error %}
						<div class="alert alert-danger">
							{{error.message}}
						</div>
					{% endif %}
				<div class="card">
					<div class="card-title">
						<h5 class=" center">Reset Password Please Enter New Password</h5>
					</div>
					<div class="card-content">
						{{form_start(form)}}
						{{form_widget(form)}}
						
						<button name="" type="submit" id="submit" class="btn btn-primary" href="#" role="button">Register</button>

						{{form_end(form)}}
					</div>


				</div>
			</div>
		</div>

	{% endblock %}