<div class="card-panel ">
														<div class="row post-body">
														<img src="/images/ah.jpg" alt="" class="circle responsive-img col s1">
															{# <div class="col s1">
																<div class="user-img">
																	
																</div>
															</div> #}
															<div class="col s7 ">
																<a href="{{path('post_user',{'id':post.user.id})}}">
																	<strong class="postHeader">
																		{{replyComment.user.username}} .
																	</strong>
																	<small class="date">
																	{{replyComment.createdAt|ago}}
																</small>
																</a>


															</div>
															{# <div class="col s2">
																<small class=" black-text">
																	{{replyComment.createdAt|date('d/m/Y')}}
																</small>
															</div> #}
															<div class="col s4 right">
																{% if app.user and app.user==replyComment.user %}

																	{# edit #}
																	<a class="waves-effect waves-light btn-floating btn-small  lighten-2 modal-trigger " href="#{{replyComment.id}}editReplayComment">
																		<i class="material-icons iconis  prefix">edit</i>
																	</a>
																	{# delete #}
																	<a href="#{{replyComment.id}}deleteReplayComment" class="waves-effect waves-light btn-floating modal-trigger btn-small  lighten-3 post-delete">
																	   <i class="material-icons iconis  prefix">delete</i>
																	</a>
																{% endif %}
																<!-- Modal Structure -->
																<div id="{{replyComment.id}}editReplayComment" class="modal">
																	<div class="modal-content">
																		<span class="close-modal modal-close">
																			<i class="material-icons right">close</i>
																		</span>
																		<h4 class="left">Update Your Comment!</h4>

																		{{ render(controller('App\\Controller\\CommentReplyController::edit', { 'id': replyComment.id,'postId':post.id })) }}

																	</div>

																</div>
																<!--end Modal Structure -->


															</div>

														</div>
														<div class="row">
															<div class="col s9  black-text">
																{{replyComment.content}}
															</div>


														</div>
													</div>




													