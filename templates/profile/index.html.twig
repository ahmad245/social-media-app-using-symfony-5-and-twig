{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}
	<style>
		{{parent()}}
		.img-profile {
			height: 30rem !important;
		}
	</style>
	<div class="row">
		<div class="col s12 m12">
			<div class="card">
				<div class="card-image">
					<img class="responsive-img img-profile" src="/images/ah.jpg">
				</div>
				<div class="card-content">
					{% include "profile/info.html.twig" with {'user':user} %}
        </div>
        <div class="col s3">
        
									<a href="{{path('my_profile_follow',{'id':1})}}" class="waves-effect waves-light btn-small">
										<i class="material-icons left">person_outline</i>{{user.following|length |default('0')}} Following</a>	
        </div>
         <div class="col s3">
          		<a href="{{path('my_profile_follow',{'id':0})}}" class="waves-effect waves-light btn-small">
										<i class="material-icons left">person_add</i>{{user.followers|length |default('0')}}Followers</a>
        </div>
					<div class="card-tabs">
						<ul class="tabs tabs-fixed-width">
							<li class="tab">
								<a class="active" href="#myPost" id="go">MyPost</a>
							</li>
							<li class="tab">
								<a href="#myLikes">Likes</a>
							</li>
							<li class="tab">
								<a href="#test">Replies</a>
							</li>

						</ul>
					</div>
					<div class="card-content grey lighten-4">
						<div id="myPost">
							{{ render(path('my_profile_posts')) }}
							{# {% include "profile/myPost.html.twig" with {'posts':user.posts} %} #}
						</div>
						<div id="myLikes">
							{{ render(path('my_profile_likes')) }}
							{# {% include "profile/myLikes.html.twig" with {'posts':user.posts} %} #}
						</div>
						<div id="test">
							{{ render(path('my_profile_commented')) }}
						</div>

					</div>
				</div>
			</div>
		</div>


	{% endblock %}
	{% block javascripts %}
		{{parent()}}
		<script></script>
	{% endblock %}
