{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}
	<style>
		{{parent()}}
		.img-profile {
			height: 30rem !important;
		}
	</style>
	<div class="row">
		<div class="col s12 m12">
			<div class="card">

				<div class="card-content">
					<span class="card-title">{{user.fullname}}</span>
					<span>{{user.username}}</span>
				</div>

				<div class="card-tabs">
					<ul class="tabs tabs-fixed-width">
						<li class="tab">
                     
                        
							<a class=" {% if followers %} active{% endif %} " href="#followers">Followers</a>
						</li>
						<li class="tab">
							<a class=" {% if following %} active{% endif %} " href="#following">Following</a>
						</li>


					</ul>
				</div>


				<div class="card-content grey lighten-4">
					<div id="followers">
						<ul class="collection ">

							{% if user.followers|length > 0%}
								{% for follower in user.followers %}
									{% include "post/followers.html.twig" with {'follower':follower} %}

								{% endfor %}
							</ul>
						
						    {% endif %}
					</div>
					<div id="following">
						<ul class="collection ">
						
							{% if user.following|length > 0 %}
								{% for following in user.following %}

									{% include "post/following.html.twig" with {'following':following} %}

								{% endfor %}
							{% endif %}
						</ul>
					</div>

				</div>


			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
{{parent()}}
<script></script>{% endblock %}
